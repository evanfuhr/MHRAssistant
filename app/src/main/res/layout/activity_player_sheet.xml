<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_alignParentEnd="false">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView_player_sheet_left_panel"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/player_sheet_left_panel_child">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/affiliations_label"
                    android:id="@+id/textView_affiliations_label"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout"
                    android:layout_below="@+id/textView_affiliations_label"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/affiliations_label_solo"
                        android:id="@+id/textView_affiliations_solo"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/affiliations_label_buddy"
                        android:id="@+id/textView_affiliations_buddy"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/affiliations_label_team"
                        android:id="@+id/textView_affiliations_team"
                        android:layout_weight="1" />
                </LinearLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup_affiliations_group"
                    android:orientation="horizontal"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/affiliations_data_solo"
                        android:id="@+id/radioButton_affiliations_solo"
                        android:checked="false"
                        android:layout_weight="1" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/affiliations_data_buddy"
                        android:id="@+id/radioButton_affiliations_buddy"
                        android:checked="false"
                        android:layout_weight="1" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/affiliations_data_team"
                        android:id="@+id/radioButton_affiliations_team"
                        android:layout_weight="1" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/distinctions_label"
                    android:id="@+id/textView_distinctions"
                    android:layout_below="@+id/radioGroup_affiliations_group"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/distinction1"
                    android:id="@+id/textView_distinction1"
                    android:layout_below="@+id/textView_distinctions"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/distinction2"
                    android:id="@+id/textView_distinction2"
                    android:layout_below="@+id/textView_distinction1"
                    android:layout_alignRight="@+id/textView_distinction1"
                    android:layout_alignEnd="@+id/textView_distinction1"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/distinction3"
                    android:id="@+id/textView_distinction3"
                    android:layout_below="@+id/textView_distinction2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView_distinction1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distinction_d8"
                        android:id="@+id/radioButton_distinction_d8"
                        android:checked="false"
                        android:layout_marginRight="@dimen/activity_horizontal_margin" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distinction_d4"
                        android:id="@+id/radioButton_distinction_d4"
                        android:checked="false"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/stress_label"
                    android:id="@+id/textView_stress_label"
                    android:layout_below="@+id/textView_distinction3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/stress_label_physical"
                    android:id="@+id/textView_stress_label_physical"
                    android:layout_below="@+id/textView_stress_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar_stress_physical"
                    android:max="5"
                    android:progress="3"
                    android:indeterminate="false"
                    android:layout_below="@+id/textView_stress_label_physical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/stress_label_mental"
                    android:id="@+id/textView_stress_label_mental"
                    android:layout_below="@+id/seekBar_stress_physical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar_stress_mental"
                    android:max="5"
                    android:progress="0"
                    android:indeterminate="false"
                    android:layout_below="@+id/textView_stress_label_mental"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/stress_label_emotional"
                    android:id="@+id/textView_stress_label_emotional"
                    android:layout_below="@+id/seekBar_stress_mental"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar_stress_emotional"
                    android:max="5"
                    android:progress="3"
                    android:indeterminate="false"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView_stress_label_emotional"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/trauma_label"
                    android:id="@+id/textView_trauma_label"
                    android:layout_below="@+id/seekBar_stress_emotional"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/stress_label_physical"
                    android:id="@+id/textView_trauma_label_physical"
                    android:layout_below="@+id/textView_trauma_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar_trauma_physical"
                    android:max="5"
                    android:progress="0"
                    android:indeterminate="false"
                    android:layout_below="@+id/textView_trauma_label_physical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/stress_label_mental"
                    android:id="@+id/textView_trauma_label_mental"
                    android:layout_below="@+id/seekBar_trauma_physical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar_trauma_mental"
                    android:max="5"
                    android:progress="0"
                    android:indeterminate="false"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView_trauma_label_mental"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/stress_label_emotional"
                    android:id="@+id/textView_trauma_label_emotional"
                    android:layout_below="@+id/seekBar_trauma_mental"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar_trauma_emotional"
                    android:max="5"
                    android:progress="0"
                    android:indeterminate="false"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView_trauma_label_emotional"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/other_label"
                    android:id="@+id/textView_other_label"
                    android:layout_below="@+id/seekBar_trauma_emotional"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/plot_points_label"
                    android:id="@+id/textView_plot_points"
                    android:layout_below="@+id/textView_other_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/opportunities_label"
                    android:id="@+id/textView_opportunities"
                    android:layout_below="@+id/textView_plot_points"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/experience_label"
                    android:id="@+id/textView_experience_label"
                    android:layout_below="@+id/textView_opportunities"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText_plot_points_count"
                    android:text="@string/plot_points_count"
                    android:layout_alignBottom="@+id/textView_plot_points"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/textView_distinctions"
                    android:layout_toEndOf="@+id/textView_distinctions"
                    android:gravity="right" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText_opportunities_count"
                    android:text="@string/opportunities_count"
                    android:gravity="right"
                    android:layout_above="@+id/textView_experience_label"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignLeft="@+id/editText_plot_points_count"
                    android:layout_alignStart="@+id/editText_plot_points_count" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText_experience_count"
                    android:text="@string/experience_count"
                    android:gravity="right"
                    android:layout_alignBottom="@+id/textView_experience_label"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignLeft="@+id/editText_opportunities_count"
                    android:layout_alignStart="@+id/editText_opportunities_count" />

            </RelativeLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView_player_sheet_right_panel"
            android:layout_weight="2" />

    </LinearLayout>
</RelativeLayout>